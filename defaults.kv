#:kivy 2.0.0
#:import hex kivy.utils.get_color_from_hex


<Widget>:
    canvas.before:
        Color:
            rgba: hex('#27282b')
        Rectangle:
            pos: self.pos
            size: self.size
    size: (100, 40)
<Screen>:
    size: root.size

<MenuLayout@FloatLayout>:
    size_hint: (1, .1)
    pos_hint: {"x": 0, "y": 0.9}
    spacing: [10, 10]
    canvas.before:
        Color:
            rgba: hex('#303136')
        Rectangle:
            pos: self.pos
            size: self.size


<Button>:
    background_color: hex('#494b50') if self.state == 'normal' else hex("#797d86")
    background_normal: ''
    background_down: ''