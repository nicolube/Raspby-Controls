#:kivy 2.0.0
#:import hex kivy.utils.get_color_from_hex
<Screen>:
    size: root.size
    canvas.before:
        Color:
            rgba: hex('#27282b')
        Rectangle:
            pos: self.pos
            size: self.size

<Widget>:
    canvas.before:
        Color:
            rgba: hex('#27282b')
        Rectangle:
            pos: self.pos
            size: self.size

<Button>:
    background_color: hex('#494b50') if self.state == 'normal' else hex("#797d86")
    background_normal: ''
    background_down: ''