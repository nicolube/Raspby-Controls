#:kivy 2.0.0

ScreenManager:
    id: screen_manager
    flasher_main_screen: flasher_main_screen
    MainScreen:
        manager: screen_manager
    FlasherMainScreen:
        id: flasher_main_screen
        manager: screen_manager
    PioFileChooserScreen:
        manager: screen_manager

<MainScreen>:
    name: "MainScreen"

    FloatLayout:
        size_hint: (.96, .96)
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        MenuLayout:
            Button:
                text: "Shutdown"
                size_hint: (.2, .8)
                pos_hint: {"x": .792, "center_y": 0.5}
                on_press:
                    root.on_shutdown()
        GridLayout:
            size_hint: (1, .85)
            pos_hint: {"x": 0, "y": 0}
            spacing: [10, 10]
            cols: 1
            Button:
                text: "Firmware Flasher"
                on_press:
                    root.manager.transition.direction = 'left'
                    root.manager.current = "FlasherMainScreen"